<Window x:Class="Projekt_zespołowy.UserListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zarządzanie użytkownikami"
        Height="500" Width="800"
        Background="#F4F4F4">

    <Grid Margin="20">

        <StackPanel>

            <TextBlock Text="Lista użytkowników systemu" 
                       FontSize="22" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20"/>

            <Border Background="White" CornerRadius="5" Padding="15">
                <StackPanel>

                    <ListView x:Name="ListaUzytkownikow" 
                              Height="350" 
                              BorderThickness="1"
                              BorderBrush="#CCCCCC">

                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID" 
                                                DisplayMemberBinding="{Binding Id}" 
                                                Width="50"/>
                                <GridViewColumn Header="Login" 
                                                DisplayMemberBinding="{Binding Login}" 
                                                Width="150"/>
                                <GridViewColumn Header="Email" 
                                                DisplayMemberBinding="{Binding Email}" 
                                                Width="220"/>
                                <GridViewColumn Header="Rola" 
                                                DisplayMemberBinding="{Binding Rola}" 
                                                Width="120"/>
                                <GridViewColumn Header="Data rejestracji" 
                                                DisplayMemberBinding="{Binding DataRejestracji}" 
                                                Width="130"/>
                                <GridViewColumn Header="Akcje" Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Usuń"
                                                    Click="UsunUzytkownika_Click"
                                                    Tag="{Binding Id}"
                                                    Background="#DC3545"
                                                    Foreground="White"
                                                    Padding="10,3"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>

                    </ListView>

                </StackPanel>
            </Border>

        </StackPanel>

    </Grid>

</Window>
