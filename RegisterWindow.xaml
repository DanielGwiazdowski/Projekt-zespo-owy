<Window x:Class="Projekt_zespołowy.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rejestracja" Height="400" Width="450" 
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="5,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="5,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#DDDDDD" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Nagłówek -->
            <Border Background="#0078D7" Grid.Row="0">
                <TextBlock Text="REJESTRACJA" Foreground="White" FontSize="20" 
                           FontWeight="Bold" Padding="20,15" HorizontalAlignment="Left"/>
            </Border>

            <!-- Zawartość -->
            <Border Background="White" Grid.Row="1" Padding="30,20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Wprowadź swoje dane rejestracyjne" Grid.Row="0" Grid.ColumnSpan="2" 
                               FontSize="14" Margin="0,0,0,15"/>

                    <TextBlock Text="Nazwa użytkownika:" Grid.Row="1" Grid.Column="0" 
                               FontSize="14" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <TextBox x:Name="txtUsername" Grid.Row="1" Grid.Column="1"/>

                    <TextBlock Text="Hasło:" Grid.Row="2" Grid.Column="0" 
                               FontSize="14" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <PasswordBox x:Name="txtPassword" Grid.Row="2" Grid.Column="1"/>

                    <TextBlock Text="Powtórz hasło:" Grid.Row="3" Grid.Column="0" 
                               FontSize="14" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <PasswordBox x:Name="txtConfirmPassword" Grid.Row="3" Grid.Column="1"/>

                    <TextBlock Text="Adres e-mail:" Grid.Row="4" Grid.Column="0" 
                               FontSize="14" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <TextBox x:Name="txtEmail" Grid.Row="4" Grid.Column="1"/>
                </Grid>
            </Border>

            <!-- Przyciski -->
            <Border Background="#F0F0F0" Grid.Row="2">
                <Grid Margin="20,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Content="Anuluj" Grid.Column="0" HorizontalAlignment="Left" 
                            Width="100" Background="#E0E0E0" Foreground="Black"/>

                    <Button Content="Zarejestruj" Grid.Column="1" HorizontalAlignment="Right"
                            Width="100" Background="#0078D7" Foreground="White"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
