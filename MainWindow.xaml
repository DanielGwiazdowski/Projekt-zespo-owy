<Window x:Class="Projekt_zespołowy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AutoPartHub" Height="600" Width="900"
        MinWidth="700" MinHeight="500">

    <Window.Resources>
        <!-- Styl dla przycisków -->
        <Style x:Key="AuthButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Styl dla przycisku-ikony (koszyk) -->
        <Style x:Key="IconOnlyButton" TargetType="Button">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Margin" Value="0,5,20,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="ToolTipService.ShowDuration" Value="4000"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="25">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Nagłówek -->
            <RowDefinition Height="Auto"/>
            <!-- Kategorie -->
            <RowDefinition Height="Auto"/>
            <!-- Koszyk -->
            <RowDefinition Height="*"/>
            <!-- Treść główna -->
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <Border Background="Silver" Grid.Row="0" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="AutoPartHub"
                           FontSize="28" FontWeight="Bold" Foreground="Black"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           FontFamily="Arial" Grid.Column="0"/>

                <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center">
                    <Button Content="Zaloguj się" Style="{StaticResource AuthButtonStyle}" Background="#0078D7"
                            Click="BtnLogin_Click"/>
                    <Button Content="Zarejestruj się" Style="{StaticResource AuthButtonStyle}" Background="#28A745"
                            Click="BtnRegister_Click"/>
                    <Button Content="Wyloguj" Style="{StaticResource AuthButtonStyle}" Background="#DC3545"
                            Click="BtnLogout_Click"/>
                    <Button Content="Panel Admina" Style="{StaticResource AuthButtonStyle}" Background="#FFA500"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Pasek kategorii -->
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
            <WrapPanel HorizontalAlignment="Center" Margin="5">
                <Button Width="150" Margin="5" Background="#0078D7" Foreground="White" FontWeight="Bold">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⚡" FontSize="16" Margin="0,0,5,0"/>
                        <TextBlock Text="Układ Elektryczny"/>
                    </StackPanel>
                </Button>

                <Button Width="150" Margin="5" Background="#0078D7" Foreground="White" FontWeight="Bold">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🛑" FontSize="16" Margin="0,0,5,0"/>
                        <TextBlock Text="Układ Hamulcowy"/>
                    </StackPanel>
                </Button>

                <Button Width="150" Margin="5" Background="#0078D7" Foreground="White" FontWeight="Bold">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⚙️" FontSize="16" Margin="0,0,5,0"/>
                        <TextBlock Text="Układ Napędowy"/>
                    </StackPanel>
                </Button>

                <Button Width="150" Margin="5" Background="#0078D7" Foreground="White" FontWeight="Bold">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="💧" FontSize="16" Margin="0,0,5,0"/>
                        <TextBlock Text="Oleje"/>
                    </StackPanel>
                </Button>

                <Button Width="150" Margin="5" Background="#0078D7" Foreground="White" FontWeight="Bold">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🔍" FontSize="16" Margin="0,0,5,0"/>
                        <TextBlock Text="Filtry"/>
                    </StackPanel>
                </Button>

                <Button Width="150" Margin="5" Background="#0078D7" Foreground="White" FontWeight="Bold">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🔄" FontSize="16" Margin="0,0,5,0"/>
                        <TextBlock Text="Sprzęgła"/>
                    </StackPanel>
                </Button>

                <Button Width="150" Margin="5" Background="#0078D7" Foreground="White" FontWeight="Bold">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="💿" FontSize="16" Margin="0,0,5,0"/>
                        <TextBlock Text="Koła Dwumasowe"/>
                    </StackPanel>
                </Button>
            </WrapPanel>
        </ScrollViewer>

        <!-- 🔽 KOSZYK POD PASKIEM KATEGORII, PO PRAWEJ -->
        <Grid Grid.Row="2">
            <Button x:Name="BtnCart"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Style="{StaticResource IconOnlyButton}"
                    ToolTip="Koszyk"
                    Click="BtnCart_Click">
                <Grid>
                    <TextBlock Text="&#xE7BF;"
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="26"
                               Foreground="Black"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    <Border x:Name="CartBadge"
                            Background="#DC3545"
                            CornerRadius="8"
                            Width="16" Height="16"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="0,2,2,0"
                            Visibility="Collapsed">
                        <TextBlock x:Name="CartCountText"
                                   Text="0"
                                   Foreground="White"
                                   FontSize="10"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Button>
        </Grid>

        <!-- Główna zawartość -->
        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Frame x:Name="MainFrame"
                       NavigationUIVisibility="Hidden"
                       Background="Transparent"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
