<Window x:Class="Projekt_zespołowy.Views.ClaimsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zgłoszenie Reklamacyjne" 
        Height="550" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="🛠️ Formularz Reklamacji"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="#222"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Wypełnij poniższe dane, aby zgłosić problem"
                       Foreground="#666"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <Border Grid.Row="1"
                Background="White"
                Padding="25"
                CornerRadius="12"
                BorderBrush="#DDD"
                BorderThickness="1"
                VerticalAlignment="Top">

            <StackPanel>
                <TextBlock Text="Numer zamówienia" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,5"
                           Foreground="#444"/>
                <TextBox x:Name="InputOrderId" 
                         Height="35"
                         VerticalContentAlignment="Center"
                         Padding="8,0"
                         BorderBrush="#CCC"/>

                <TextBlock Text="Powód reklamacji / Opis problemu" 
                           FontWeight="SemiBold" 
                           Margin="0,15,0,5"
                           Foreground="#444"/>
                <TextBox x:Name="InputClaimReason" 
                         Height="150" 
                         AcceptsReturn="True" 
                         TextWrapping="Wrap" 
                         VerticalScrollBarVisibility="Auto"
                         Padding="8"
                         BorderBrush="#CCC"/>

                <UniformGrid Columns="2" Margin="0,25,0,0">
                    <Button Content="Anuluj"
                            Height="40"
                            Margin="0,0,10,0"
                            Background="#6C757D"
                            Foreground="White"
                            FontWeight="SemiBold"
                            Click="BtnCancel_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Button Content="Wyślij zgłoszenie"
                            Height="40"
                            Margin="10,0,0,0"
                            Background="#007BFF"
                            Foreground="White"
                            FontWeight="Bold"
                            Click="BtnSendClaim_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </UniformGrid>
            </StackPanel>
        </Border>
    </Grid>
</Window>