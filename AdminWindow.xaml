<Window x:Class="Projekt_zespołowy.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panel Administratora"
        Height="650" Width="900"
        Background="#F4F4F4">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">

                <!-- Tytuł -->
                <TextBlock Text="Panel Administratora" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Margin="0,0,0,20"/>

                <!-- Sekcja dodawania nowego elementu -->
                <Border Background="White" CornerRadius="5" Padding="15" Margin="0,0,0,20">
                    <StackPanel>

                        <TextBlock Text="Dodawanie nowego elementu" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,15"/>

                        <!-- Nazwa elementu -->
                        <TextBlock Text="Nazwa elementu:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="NazwaElementu" Height="30"
                                 VerticalContentAlignment="Center"
                                 Padding="5,0,0,0"
                                 Margin="0,0,0,15"/>

                        <!-- Opis -->
                        <TextBlock Text="Opis elementu:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="OpisElementu" 
                                 Height="100" 
                                 TextWrapping="Wrap"
                                 Padding="5,5,0,0"
                                 Margin="0,0,0,15"/>
                        <TextBlock Text="Producent:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="ProducentElementu" Height="30" 
         VerticalContentAlignment="Center" 
         Padding="5,0,0,0" 
         Margin="0,0,0,15"/>
                        <TextBlock Text="Cena netto:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="CenaElementu" Height="30" VerticalContentAlignment="Center" Padding="5,0,0,0" Margin="0,0,0,15"/>

                        <!-- Zdjęcie -->
                        <TextBlock Text="Zdjęcie elementu:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <Button Content="Wybierz plik ze zdjęciem"
                                Click="WybierzZdjecie_Click"
                                Height="30"
                                Background="#3498DB"
                                Foreground="White"
                                HorizontalAlignment="Left"
                                Padding="10,0"
                                Margin="0,0,0,10"/>

                        <!-- Podgląd -->
                        <TextBlock Text="Podgląd zdjęcia:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <Border BorderBrush="#CCCCCC" BorderThickness="1" 
                                Width="200" Height="150" HorizontalAlignment="Left"
                                Margin="0,0,0,15">
                            <Image x:Name="PodgladZdjecia" Stretch="Uniform"/>
                        </Border>

                        <!-- Kategoria -->
                        <TextBlock Text="Kategoria elementu:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox x:Name="KategoriaElementu" 
                                  Height="30"
                                  VerticalContentAlignment="Center"
                                  Padding="5,0,0,0"
                                  Margin="0,0,0,20"/>

                        <!-- Dodawanie -->
                        <Button Content="Dodaj element do katalogu"
                                Click="DodajElement_Click"
                                Background="#28A745"
                                Foreground="White"
                                Height="40"
                                HorizontalAlignment="Left"
                                Padding="15,0"/>
                    </StackPanel>
                </Border>

                <!-- Lista elementów -->
                <Border Background="White" CornerRadius="5" Padding="15" Margin="0,0,0,20">
                    <StackPanel>

                        <TextBlock Text="Lista elementów w katalogu"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,15"/>

                        <ListView x:Name="ListaElementow" 
                                  Height="250" 
                                  BorderThickness="1"
                                  BorderBrush="#CCCCCC">

                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Width="600">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Image Source="{Binding Zdjecie}"
                                               Width="50" Height="50"
                                               Margin="0,0,10,0"/>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding Nazwa}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Kategoria}" Foreground="Gray" FontSize="12"/>
                                            <TextBlock Text="{Binding Opis}" 
                                                       TextTrimming="CharacterEllipsis"
                                                       Foreground="#555" FontSize="12"/>
                                        </StackPanel>

                                        <Button Content="Usuń"
                                                Click="UsunElement_Click"
                                                Tag="{Binding Id}"
                                                Background="#DC3545"
                                                Foreground="White"
                                                Padding="10,5"
                                                Margin="10,0,0,0"
                                                Grid.Column="2"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>

                        </ListView>

                    </StackPanel>
                </Border>

                <!-- Przycisk zarządzania użytkownikami -->
                <Border Background="White" CornerRadius="5" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Zarządzanie użytkownikami" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,15"/>

                        <Button Content="📋 Otwórz listę użytkowników"
                                Click="OtworzListeUzytkownikow_Click"
                                Background="#2980B9"
                                Foreground="White"
                                Height="50"
                                FontSize="15"
                                FontWeight="SemiBold"
                                HorizontalAlignment="Left"
                                Padding="25,0"
                                Cursor="Hand"/>
                    </StackPanel>
                </Border>
                <!-- Raporty sprzedaży -->
                <Border Background="White" CornerRadius="5" Padding="15" Margin="0,20,0,20">
                    <StackPanel>

                        <TextBlock Text="Raporty sprzedaży"
                   FontSize="18"
                   FontWeight="SemiBold"
                   Margin="0,0,0,15"/>

                        <!-- Zakres dat -->
                        <TextBlock Text="Zakres dat:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <DatePicker x:Name="DataOd" Width="150" Margin="0,0,10,0"/>
                            <DatePicker x:Name="DataDo" Width="150"/>
                        </StackPanel>

                        <!-- Przycisk generowania -->
                        <Button Content="📊 Generuj raport sprzedaży"
                Click="GenerujRaportSprzedazy_Click"
                Height="40"
                Background="#8E44AD"
                Foreground="White"
                FontWeight="SemiBold"
                HorizontalAlignment="Left"
                Padding="20,0"/>

                        <!-- Wynik -->
                        <TextBlock Text="Podsumowanie:" 
                   FontWeight="SemiBold"
                   Margin="0,15,0,5"/>

                        <TextBlock x:Name="PodsumowanieRaportu"
                   FontSize="14"
                   Foreground="#444"/>

                    </StackPanel>
                </Border>
                <Button Content="📄 Eksportuj raport do PDF"
        Click="EksportujRaportPDF_Click"
        Height="40"
        Background="#C0392B"
        Foreground="White"
        FontWeight="SemiBold"
        HorizontalAlignment="Left"
        Padding="20,0"
        Margin="0,10,0,0"/>


                <!-- Zarządzanie zamówieniami -->
                <Border Background="White" CornerRadius="5" Padding="15" Margin="0,20,0,20">
                    <StackPanel>

                        <TextBlock Text="Zarządzanie zamówieniami"
                   FontSize="18"
                   FontWeight="SemiBold"
                   Margin="0,0,0,15"/>

                        <!-- Lista zamówień -->
                        <ListView x:Name="ListaZamowien"
                  Height="200"
                  SelectionChanged="ListaZamowien_SelectionChanged">

                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="ID" Width="50"
                                    DisplayMemberBinding="{Binding Id}"/>
                                    <GridViewColumn Header="Data" Width="150"
                                    DisplayMemberBinding="{Binding Data}"/>
                                    <GridViewColumn Header="Status" Width="120"
                                    DisplayMemberBinding="{Binding Status}"/>
                                    <GridViewColumn Header="Kwota" Width="100"
                                    DisplayMemberBinding="{Binding Suma}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>

                        <!-- Zmiana statusu -->
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <ComboBox x:Name="StatusCombo"
                      Width="180"
                      Margin="0,0,10,0">
                                <ComboBoxItem Content="Nowe"/>
                                <ComboBoxItem Content="W realizacji"/>
                                <ComboBoxItem Content="Wysłane"/>
                                <ComboBoxItem Content="Zrealizowane"/>
                                <ComboBoxItem Content="Anulowane"/>
                            </ComboBox>

                            <Button Content="Zmień status"
                    Click="ZmienStatusZamowienia_Click"
                    Background="#27AE60"
                    Foreground="White"
                    Padding="15,5"/>
                        </StackPanel>

                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>

</Window>
